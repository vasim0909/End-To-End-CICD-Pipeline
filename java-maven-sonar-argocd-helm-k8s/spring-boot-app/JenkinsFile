pipeline {
    agent {
        docker {
            image 'rahul407/jenkins-maven-java17-agent:latest'
            // Added -u 0:0 to ensure we operate as root to fix workspace permissions
            args '--user root -u 0:0 -v /var/run/docker.sock:/var/run/docker.sock --network host' 
        }
    }
    
    options {
        skipDefaultCheckout() 
    }

    stages {
        stage('Checkout') {
            environment {
                REPO_URL = "https://github.com/vasim0909/End-To-End-CICD-Pipeline"
                BRANCH_NAME = "main"
            }
            steps {
                sh 'echo Starting custom checkout'
                sh 'git config --global --add safe.directory "*"'
                
                // Clean workspace
                sh 'rm -rf * .git'
                
                sh "git clone ${REPO_URL} ."
                sh "git checkout ${BRANCH_NAME}"
                
                // CRITICAL FIX: Give permissions back to the jenkins user for the @tmp directories
                sh "chown -R 105:108 ${WORKSPACE}"
            }
        }

        stage('Build and Test') {
            steps {
                // Using cd inside sh to avoid the dir() block AccessDeniedException
                sh '''
                    cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                    mvn clean package
                '''
            }
        }

        stage('Static Code Analysis') {
            environment {
                SONAR_URL = "http://172.17.217.202:9000"
            }
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    sh """
                        cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                        mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.1.2184:sonar \
                        -Dsonar.login=${SONAR_AUTH_TOKEN} \
                        -Dsonar.host.url=${SONAR_URL}
                    """
                }
            }
        }

        stage('Build and Push Docker Image') {
            environment {
                DOCKER_IMAGE = "rahul407/ultimate-cicd:${BUILD_NUMBER}"
            }
            steps {
                script {
                    sh """
                        cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                        docker build -t ${DOCKER_IMAGE} .
                    """
                    docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                        docker.image("${DOCKER_IMAGE}").push()
                    }
                }
            }
        }

        stage('Update Deployment File') {
            environment {
                GIT_REPO_NAME = "End-To-End-CICD"
                GIT_USER_NAME = "vasim0909"
            }
            steps {
                withCredentials([string(credentialsId: 'github-1', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                        git config user.email "vasimvasim7374@gmail.com"
                        git config user.name "vasim0909"
                        
                        sed -i "s|image: rahul407/ultimate-cicd:[0-9]*|image: rahul407/ultimate-cicd:${BUILD_NUMBER}|g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                        
                        git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                        git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                    '''
                } 
            } 
        } 
    } 
}
